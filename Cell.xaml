    <TextBlock x:Name="TextHolder" HorizontalAlignment="Stretch" Margin="1,1,1,1" Text="" VerticalAlignment="Stretch"  FontSize="150" FontFamily="Showcard Gothic" TextAlignment="Center" LineHeight="200"
                   />
